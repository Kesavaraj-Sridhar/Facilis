<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView

        android:layout_marginTop="@dimen/secondary_margin"
        android:layout_marginLeft="@dimen/secondary_margin"
        android:id="@+id/alphabet_text_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/texview_design"
        android:padding="@dimen/primary_margin"
        android:gravity="center"
        android:text="A"
        android:textSize="@dimen/secondary_text" />

    <RelativeLayout
        android:layout_weight="1"
        android:padding="@dimen/primary_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/primary_padding"
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/duration_text_view"
            android:padding="@dimen/primary_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Duration"
            android:layout_below="@+id/name_text_view"
            android:layout_alignLeft="@+id/name_text_view"
            android:layout_alignStart="@+id/name_text_view" />



        <TextView
            android:layout_alignParentRight="true"
            android:padding="@dimen/primary_padding"
            android:id="@+id/posted_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted Date"/>

        <TextView
            android:padding="@dimen/primary_padding"
            android:id="@+id/number_of_items_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of items"
            android:layout_below="@+id/posted_date_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>